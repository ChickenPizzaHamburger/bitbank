<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>BitBank(1213ver1)</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.jsp</welcome-file>
    <welcome-file>default.htm</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>user</servlet-name>
    <servlet-class>net.user.action.UserController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>user</servlet-name>
    <url-pattern>*.use</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>account</servlet-name>
    <servlet-class>net.account.action.AccountController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>account</servlet-name>
    <url-pattern>*.ac</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>transfer</servlet-name>
    <servlet-class>net.transfer.action.TransferController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>transfer</servlet-name>
    <url-pattern>*.tr</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>lock</servlet-name>
    <servlet-class>net.lock.action.LockController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>lock</servlet-name>
    <url-pattern>*.loc</url-pattern>
  </servlet-mapping>
  <resource-ref>
    <description>Connection</description>
    <res-ref-name>jdbc/MysqlDB</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
</web-app>